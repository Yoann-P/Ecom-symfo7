{% extends 'base.html.twig' %} {% block body %}
<div class="container my-5">
  <h1>Connexion</h1>

  {% if error %}
  <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <form action="{{ path('app_login') }}" method="post">
    <label for="username">Votre email</label>
    <input
      type="text"
      id="username"
      name="_username"
      value="{{ last_username }}"
      class="form-control"
    />

    <label for="password my-3">Votre mot de passe</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="_password"
    />

    <input
      type="hidden"
      name="_target_path"
      value="{{ path('app_account') }}"
    />

    <button class="btn btn-success my-3" type="submit">Connexion</button>
  </form>
  <br />
  <a href="{{ path('app_register') }}">M'inscrire</a>
</div>
{% endblock %}
