{% extends 'base.html.twig' %} {% block body %}

<div class="container my-5">
  <h1>Mon panier</h1>
  <div class="row">
    <div class="col-md-8">
      {%for product in cart%}
      <div class="row mt-2">
        <div class="col-md-2">
          <img
            class="img-fluid"
            src="/uploads/{{ product.object.illustration }}"
            alt="{{ product.object.name }}"
          />
        </div>
        <div class="col-md-6">
          <strong>{{ product.object.name }}</strong>
          <span class="d-block small"
            >Prix unitaire: {{ product.object.pricewt | price }}</span
          >
        </div>
        <div class="col-md-2 text-right">x {{ product.qty }}</div>
        <div class="col-md-2">
          {% set total_price = product.qty * product.object.pricewt %}
          <strong>{{ total_price | price }}</strong>
        </div>
      </div>
      {%endfor%}
    </div>
    <div class="col-md-4">RÃ©cap de mon panier</div>
  </div>
</div>
{% endblock %}
